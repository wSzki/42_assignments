FROM alpine:3.15.0

ARG MYSQL_ADMIN_NAME

RUN apk upgrade
RUN apk add --no-cache \
		php7           \
		php7-phar      \
		php7-curl      \
		php7-mysqli    \
		php7-fpm       \
		php7-json      \
	    php7-mysqli    \
		php7-iconv     \
		mariadb-client \
		curl

RUN mkdir -p /entrypoint
RUN mkdir -p /wordpress

COPY ./tools/start.sh /entrypoint

# This file is generated by default at location.
# Couldn't sed to change the listen = 9000 port (by default 127.0.0.1:9000)
COPY ./conf/www.conf /etc/php7/php-fpm.d/

# DOWNLOADING AND INSTALLING WP-CLI - https://wp-cli.org/
RUN curl -O https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar
RUN chmod +x wp-cli.phar
RUN mv wp-cli.phar /bin/wp

WORKDIR /entrypoint
ENTRYPOINT [ "sh", "start.sh" ]
